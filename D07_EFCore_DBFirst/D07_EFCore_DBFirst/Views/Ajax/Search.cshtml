
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<input id="keyword" placeholder="Tìm gì?" />

<div id="result"></div>
@section Scripts{ 
    <script>
        $(function(){
            $("#keyword").keyup(function () {
                $.ajax({
                    "url": "/Ajax/Search",
                    type: "POST",
                    data: {
                        keyword : $(this).val()
                    },
                    success: function (data) {
                        $("#result").html(data);
                    }
                });
            });
        });
    </script>
}